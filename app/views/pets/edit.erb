<h1>Update Pet</h1>
<h2> Edits for <%=@pet.name%></h2>

<form action="/pets/<%=@pet.id%>" method="post">
    <input type="hidden" name="_method" value="patch">
    <label> Pet Name:</label>
    <input type="text" id="pet_name" name="pet[name]" value="<%=@pet.name%>">
    <br><br>
    <p> Select an existing owner or create a new one below.<p>
    <h3>Existing Owners</h3>
    <% @owners.each do |owner|%>
    <input type="radio" id="<%=owner.id%>" name="pet[owner_id]" value="<%=owner.id%>" <%="checked" if owner.pets.include?(@pet)%>><%=owner.name%><br>
    <%end %>
    <br>

    <h3> New Owner</h3>
    <input type="text" id="owner_name" name="owner[name]">
    <br><br>
    <input type="submit" value="Update Pet">
</form>




